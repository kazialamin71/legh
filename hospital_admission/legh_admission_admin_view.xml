<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="leih_general_admission_graph_view">
                <field name="name">Admission Graph</field>
                <field name="model">hospital.admission</field>
                <field name="arch" type="xml">
                    <graph string="">
                        <field name="patient_name"/>
                    </graph>
                </field>
        </record>

        <record id="admission_all_action" model="ir.actions.act_window">
            <field name="name">Admission Form</field>
            <field name="res_model">hospital.admission</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,graph</field>
            <field name="domain">[('state','in',['activated','released'])]</field>
            <field name="context">{}</field>
        </record>



        <!-- expense type tree -->
        <record model="ir.ui.view" id="admission_general_all_tree" >
            <field name="name">leih</field>
            <field name="model">hospital.admission</field>
            <field name="arch" type="xml">
            <tree string="Alu List">

                <field name="date"/>
                <field name="name"/>
                <field name="patient_name"/>
                <field name="mobile"/>
                        <field name="grand_total"/>
                        <field name="paid"/>
                        <field name="due"/>
                <field name="state"/>


            </tree>
            </field>
        </record>



       <menuitem name="All Admission" id="admission_all_menu_mainforms" parent="hospital_leih_admission_menu" action="admission_all_action" groups="legh.group_billing_menu_bill_register_edit"/>
    </data>
</openerp>
