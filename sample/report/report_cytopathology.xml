<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_cytopathology">
            <t t-call="report.html_container">
                <t t-call="legh.external_layout_pathology">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                       <h3 style="text-align: center; margin-top: 25px; padding-top: 10px;"><span t-field="o.department_id.name"/></h3>






    <t t-foreach="o.sticker_line_id" t-as="z">
            <p style="font-size: 15px;">
                <strong><t t-esc="z.test_name"/>:</strong>
                <t t-if="z.test_name=='Specimen' and not z.result">
                    Pap's Smear
                        </t>
                <t t-if="z.test_name=='Specimen Type' and not z.result">
               Conventional Pap's Smear
                        </t>

                                <t t-if="z.test_name=='Fixation/Preservation' and not z.result">
               Satisfactory
                        </t>

                                        <t t-if="z.test_name=='Specimen Adequacy' and not z.result">
               Adequate for evaluation
                        </t>

                                        <t t-if="z.test_name=='Non neoplastic findings'">
               Reactive cellular change associated with <t t-esc="z.result"/> imflammation
                        </t>

                        <t t-if="z.test_name=='Organisms' and not z.result">
               No abnormality detected
                        </t>

                <t t-if="z.test_name=='Epithelial cell abnormalities' and not z.result">
               None 
                        </t>

                                <t t-if="z.test_name=='Diagnosis' and not z.result">
               Pap's smear (cytology): Negative for intraepithelial lesion or malignance(NILM)
                        </t>


                <t t-else="">
                <t t-if="z.test_name!='Non neoplastic findings'">
                <span t-esc="z.result"/>
                </t>
                </t>
            </p>
            <t t-break="1" />
    </t>

                        <t t-if="o.advice"><p><strong>Advice:</strong> <span t-field="o.advice"/></p></t>
                    </div>
                </t>
                </t>
            </t>
        </template>
    </data>
</openerp>
